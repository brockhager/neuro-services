{
  "name": "neuro-services",
  "version": "1.0.0",
  "description": "A collection of microservices for the Neuro platform",
  "type": "module",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild dist/index.js --bundle --platform=node --format=cjs --outfile=dist/bundle.js --external:chromadb",
    "build:bin": "npm run build && npm run bundle && npm run build:win && npm run build:linux && npm run build:mac",
    "build:win": "pkg dist/bundle.js --target node18-win-x64 --output ../neuroswarm/dist/ns-node-server-win-x64.exe",
    "build:linux": "pkg dist/bundle.js --target node18-linux-x64 --output ../neuroswarm/dist/ns-node-server-linux-x64",
    "build:mac": "pkg dist/bundle.js --target node18-macos-x64 --output ../neuroswarm/dist/ns-node-server-macos-x64",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:race": "node scripts/run-tests-with-delays.js",
    "test:notify": "jest --coverage --reporters=default --reporters=jest-junit",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "monitoring:start": "docker-compose -f docker-compose.monitoring.yml up -d",
    "monitoring:stop": "docker-compose -f docker-compose.monitoring.yml down",
    "ci:full": "npm run lint && npm run build && npm run test:ci && npm run test:race"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ],
    "outputPath": "../neuroswarm/dist"
  },
  "keywords": [
    "microservices",
    "neuro",
    "typescript"
  ],
  "author": "brockhager",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.27.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-junit": "^16.0.0",
    "pkg": "^5.8.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "tsx": "^4.15.7",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chromadb": "^1.9.2",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "express-rate-limit": "^7.0.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "ollama": "^0.5.18",
    "prom-client": "^15.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.ts",
      "<rootDir>/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/**/*.d.ts"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageDirectory": "coverage"
  }
}
